{
  "name": "electron-react-typescript-starter",
  "description": "Electron React Starter App",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Eliseu Videira <eliseuvideira1@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "dotenv-safe": "^8.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^3.10.0",
    "react-is": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1",
    "typeface-roboto": "^0.0.75",
    "typeface-roboto-slab": "^1.1.4",
    "typography": "^0.16.19",
    "typography-theme-ocean-beach": "^0.16.19"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@hot-loader/react-dom": "^16.13.0",
    "@types/dotenv-safe": "^8.1.1",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "@types/typography": "^0.16.3",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.2.0",
    "css-loader": "^4.2.1",
    "electron": "^9.1.1",
    "electron-builder": "^22.8.0",
    "eslint": "^7.6.0",
    "eslint-plugin-react": "^7.20.4",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "wait-on": "^5.1.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "scripts": {
    "build": "yarn build-main && yarn build-renderer",
    "build-main": "NODE_ENV=production webpack --mode production --config webpack.config.main.js",
    "build-renderer": "NODE_ENV=production webpack --mode production --config webpack.config.renderer.js",
    "dist": "electron-builder -mlw --dir && electron-builder -mlw",
    "dist-linux": "electron-builder --linux --dir && electron-builder --linux",
    "dist-windows": "electron-builder --windows --dir && electron-builder --windows",
    "dist-mac": "electron-builder --mac --dir && electron-builder --mac",
    "start": "wait-on http://localhost:8080 && yarn start-electron",
    "start-electron": "NODE_ENV=development electron .",
    "dev-main": "NODE_ENV=development webpack --mode development --config webpack.config.main.js --inline --watch",
    "dev-renderer": "NODE_ENV=development webpack-dev-server --mode development --config webpack.config.renderer.js --inline --hot",
    "dev": "concurrently \"yarn dev-main\" \"yarn dev-renderer\""
  },
  "lint-staged": {
    "*.{js,json,jsx,ts,tsx}": [
      "prettier --check"
    ],
    "*app/main/*.{js,json,jsx,ts,tsx}": [
      "eslint -c app/main/.eslintrc.json"
    ],
    "*app/renderer/*.{js,json,jsx,ts,tsx}": [
      "eslint -c app/renderer/.eslintrc.json"
    ]
  }
}
