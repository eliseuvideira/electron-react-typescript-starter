{
  "name": "electron-react-typescript-starter",
  "description": "Electron React Starter App",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Eliseu Videira <eliseuvideira1@gmail.com>",
  "license": "MIT",
  "build": {
    "files": "./build/**/*",
    "appId": "com.electron-react-typescript-starter-app",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "categories": "Utility"
    }
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.1",
    "@types/webpack": "^4.41.21",
    "concurrently": "^5.2.0",
    "css-loader": "^4.0.0",
    "electron": "^9.1.1",
    "electron-builder": "^22.8.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "build": "yarn build-main && yarn build-renderer",
    "build-main": "webpack --mode production --config webpack.config.main.js",
    "build-renderer": "webpack --mode production --config webpack.config.renderer.js",
    "dist-linux": "yarn build && electron-builder --linux --dir && electron-builder --linux",
    "start": "electron .",
    "start-main": "webpack --mode development --config webpack.config.main.js --inline --watch",
    "start-renderer": "webpack --mode development --config webpack.config.renderer.js --inline --watch",
    "dev": "concurrently \"yarn start-main\" \"yarn start-renderer\""
  }
}
